{
  "name": "friendly-octo-lamp",
  "version": "1.0.0",
  "description": "A sample Node.js application with Docker workflow",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "build": "echo 'Building application...' && mkdir -p dist && cp -r src/* dist/",
    "docker:build": "docker build -t friendly-octo-lamp .",
    "docker:run": "docker run -p 3000:3000 friendly-octo-lamp",
    "docker:compose:up": "docker-compose up --build",
    "docker:compose:down": "docker-compose down"
  },
  "keywords": [
    "docker",
    "nodejs",
    "workflow",
    "containerization"
  ],
  "author": "davidkims",
  "license": "Apache-2.0",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.5.0",
    "supertest": "^6.3.3"
  }
}